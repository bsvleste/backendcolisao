	},
	{
		nome:"Edvan"
	}
];
var meses =['janeiro','fevereiro','mar√ßo','abril','maio','junho','julho',
			'agosto','setembro','outubro','novembro','dezembro'];
var mes=[
	
    ];
for(var i =0 ;i< meses.length ;i++)
{
			mes.push({descricao:meses[i],mensalidade:[]});

	for(var nome of jogadores)
